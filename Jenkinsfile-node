library identifier: 'jenkins-shared-library@main', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/agileqatester/jenkins-shared-libs.git',
    credentialsId: 'git-agiletester'
])

def nodeImage = selectAgent('node') // Shared library call

pipeline {
    agent {
        docker {
            image "${nodeImage}"
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        DOCKERHUB_REPO = 'agileqa/node-sample'
        IMAGE_TAG = 'latest'
    }
    stages {
        stage('Build') {
            steps {
                dir('examples/node-app') {
                    runBuild('node')
                }
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-agileqa') {
                        def app = docker.build("${DOCKERHUB_REPO}:${IMAGE_TAG}")
                        app.push()
                    }
                }
            }
        }
        stage('Deploy Locally') {
            steps {
                sh """
                    docker rm -f node_sample_container || true
                    docker run -d --name node_sample_container -p 3000:3000 ${DOCKERHUB_REPO}:${IMAGE_TAG}
                """
            }
        }
    }
}