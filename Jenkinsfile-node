library identifier: 'jenkins-shared-library@main', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/agileqatester/jenkins-shared-libs.git',
    credentialsId: 'git-agiletester'
])

pipeline {
    agent {
        docker {
            image selectAgent('node')
        }
    }
    environment {
        DOCKERHUB_REPO = 'agileqa/node-frontend'
        IMAGE_TAG = 'latest'
    }
    stages {
        stage('Build') {
            steps {
                dir('examples/node-app') {
                    runBuild('node')
                }
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-agileqa') {
                        def app = docker.build("${DOCKERHUB_REPO}:${IMAGE_TAG}")
                        app.push()
                    }
                }
            }
        }
        stage('Deploy Locally') {
            steps {
                script {
                    sh """
                        docker rm -f node_frontend_container || true
                        docker run -d --name node_frontend_container -p 8081:80 ${DOCKERHUB_REPO}:${IMAGE_TAG}
                    """
                }
            }
        }
    }
}