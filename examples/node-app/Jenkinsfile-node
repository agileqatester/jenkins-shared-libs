@Library('jenkins-shared-library@main') _

/**
 * Node.js pipeline (Declarative + hybrid)
 * - Runs inside agileqa/jenkins-agent:multi-tool (Docker socket mounted)
 * - Single proxy param: HTTP_PROXY; applied to both HTTP & HTTPS
 * - NO_PROXY is not asked; defaults to localhost,127.0.0.1; cleared only for npm step
 * - Proxy never baked into Docker image (same guardrails as .NET)
 */

// Shared/hybrid state
def proxyEnv        = [:]
def repo            = 'agileqa/node-sample'
def tag             = ''
def projDir         = 'examples/node-app'
def dockerfile      = ''
def buildCtx        = '.'
def npmCacheHost    = ''
def innerDockerArgs = ''  // for preflightCheck's inside()

pipeline {
    agent {
        docker {
            image 'agileqa/jenkins-agent:multi-tool'
            // Mount Docker socket, add docker group GID (change 991 if your host differs),
            // and public DNS fallback for learning env (replace with corp DNS if policy requires).
            args  '-v /var/run/docker.sock:/var/run/docker.sock --group-add 991 --dns 8.8.8.8 --dns 1.1.1.1'
            reuseNode true
        }
    }

    options {
        skipDefaultCheckout(true)
        timestamps()
        ansiColor('xterm')
    }

    parameters {
        // Build toggles (parity with .NET)
        booleanParam(name: 'USE_BUILDKIT', defaultValue: true,  description: 'Enable Docker BuildKit')
        booleanParam(name: 'USE_BUILDX',   defaultValue: false, description: 'Use docker buildx (multi-arch)')
        string(name: 'IMAGE_TAG', defaultValue: '', description: 'Optional override (defaults to "latest")')

        // **Only one proxy input**; weâ€™ll apply it to both HTTP and HTTPS internally.
        string(name: 'HTTP_PROXY', defaultValue: '', description: 'http://user:pass@proxy-host:port (or http://proxy-host:port)')
    }

    // Make proxy env available INSIDE the agent container
    environment {
        DOCKERHUB_REPO = 'agileqa/node-sample'

        // Prefer job param; fallback to Jenkins global env if defined
        HTTP_PROXY  = "${params.HTTP_PROXY  ?: env.HTTP_PROXY  ?: ''}"

        // Apply the same value to HTTPS as requested
        HTTPS_PROXY = "${HTTP_PROXY}"

        // Minimal NO_PROXY; not a parameter (keeps prompts clean)
        NO_PROXY    = 'localhost,127.0.0.1'

        // Lowercase variants for tools that expect them
        http_proxy  = "${HTTP_PROXY}"
        https_proxy = "${HTTPS_PROXY}"
        no_proxy    = "${NO_PROXY}"
    }

    stages {
        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Init') {
            steps {
                script {
                    // Collects HTTP(S)_PROXY / NO_PROXY from the agent env we set above
                    proxyEnv    = collectProxyEnv()
                    tag         = env.IMAGE_TAG?.trim() ? env.IMAGE_TAG.trim() : 'latest'
                    dockerfile  = "${projDir}/Dockerfile"

                    // npm cache for faster installs
                    npmCacheHost = "${env.WORKSPACE}/.npm"
                    sh "mkdir -p '${npmCacheHost}'"

                    // For preflight inner container: socket, docker group, npm cache, DNS
                    innerDockerArgs = "-v /var/run/docker.sock:/var/run/docker.sock --group-add 991 -v ${npmCacheHost}:/home/node/.npm --dns 8.8.8.8 --dns 1.1.1.1"

                    // Quick visibility (non-sensitive)
                    echo "HTTP_PROXY=${env.HTTP_PROXY ?: ''}"
                    echo "HTTPS_PROXY=${env.HTTPS_PROXY ?: ''}"
                    echo "NO_PROXY=${env.NO_PROXY ?: ''}"
                }
            }
        }

        stage('Preflight') {
            steps {
                script {
                    // Make curl/node checks proxy-aware
                    withEnv(proxyEnv) {
                        preflightCheck(
                            image     : 'agileqa/jenkins-agent:multi-tool',
                            dockerArgs: innerDockerArgs,
                            workDir   : projDir
                        )
                    }
                }
            }
        }

        stage('Build (Node)') {
            steps {
                script {
                    // Use proxy env; clear NO_PROXY just here so npm does NOT bypass the proxy for public registry
                    withEnv(proxyEnv + ['NO_PROXY=', 'no_proxy=']) {
                        dir(projDir) {
                            sh '''
                              set -eux
                              echo "== proxies in env (for npm) =="
                              env | grep -i proxy || true

                              # Configure npm to use proxy explicitly if present
                              if [ -n "${HTTP_PROXY:-}" ]; then npm config set proxy "$HTTP_PROXY"; fi
                              if [ -n "${HTTPS_PROXY:-}" ]; then npm config set https-proxy "$HTTPS_PROXY"; fi
                              npm config delete noproxy || true
                              npm config set noproxy "" || true

                              echo "== npm proxy config =="
                              npm config get proxy || true
                              npm config get https-proxy || true
                              npm config get noproxy || true
                              env | grep -i proxy || true
npm config list
curl -I --max-time 10 https://registry.npmjs.org || true
                            '''
                            // Shared lib: npm install && npm run build
                            runBuild('node')
                        }
                    }
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    // Safe: proxy provided as runtime env only, not as build-args; your history scan prevents leaks
                    dockerBuildPush(
                        image       : repo,
                        tag         : tag,
                        dockerfile  : dockerfile,
                        context     : buildCtx,
                        useBuildx   : params.USE_BUILDX,
                        useBuildKit : params.USE_BUILDKIT,
                        proxyEnv    : proxyEnv
                        // secretFiles: ['.npmrc'] // enable if you later add a private npm token
                    )
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                script {
                    // Assumes image listens on port 80 and exposes /health.
                    // If your app uses 3000, I can extend deployContainer to accept ports & healthPath.
                    deployContainer(image: "${repo}:${tag}", containerName: 'node_sample_container')
                }
            }
        }
    }

    post {
        always {
            echo "Build finished for ${repo}:${tag}"
        }
    }
}