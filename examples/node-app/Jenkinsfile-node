@Library('jenkins-shared-library@main') _

/**
 * Node.js Declarative pipeline (hybrid) reusing shared library steps.
 * Repo/Image: agileqa/node-sample
 * Workdir   : examples/node-app
 * Dockerfile: examples/node-app/Dockerfile
 */

def proxyEnv     = [:]
def nodeImage    = ''
def repo         = 'agileqa/node-sample'
def tag          = ''
def projDir      = 'examples/node-app'
def dockerfile   = ''
def buildCtx     = '.'
def dockerArgs   = ''
def npmCacheHost = ''

pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
        timestamps()
        ansiColor('xterm')
    }

    parameters {
        booleanParam(name: 'USE_BUILDKIT', defaultValue: true,  description: 'Enable Docker BuildKit')
        booleanParam(name: 'USE_BUILDX',   defaultValue: false, description: 'Use docker buildx for multi-arch')
        string(name: 'IMAGE_TAG', defaultValue: '', description: 'Optional override for image tag (defaults to "latest")')
    }

    environment {
        DOCKERHUB_REPO = 'agileqa/node-sample'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Init') {
            steps {
                script {
                    // Select Node.js-capable agent image (per your vars/selectAgent.groovy)
                    nodeImage  = selectAgent('nodejs')   // returns e.g. node:20
                    proxyEnv   = collectProxyEnv()       // proxy env list for withEnv in dockerBuildPush

                    tag        = env.IMAGE_TAG?.trim() ? env.IMAGE_TAG.trim() : 'latest'
                    dockerfile = "${projDir}/Dockerfile"

                    // Setup npm cache host directory for speed
                    npmCacheHost = "${env.WORKSPACE}/.npm"
                    sh "mkdir -p '${npmCacheHost}'"

                    // Volume mount the npm cache into the container
                    dockerArgs = "-v ${npmCacheHost}:/home/node/.npm"
                }
            }
        }

        stage('Preflight') {
            steps {
                script {
                    // Your current preflight prints .NET/NuGet; harmless but you may add Node/npm checks in the future.
                    preflightCheck(image: nodeImage, dockerArgs: dockerArgs, workDir: projDir)
                }
            }
        }

        stage('Build (Node)') {
            steps {
                script {
                    dir(projDir) {
                        // Shared lib: for 'node' => "npm install && npm run build"
                        runBuild('node')
                    }
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    dockerBuildPush(
                        image       : repo,
                        tag         : tag,
                        dockerfile  : dockerfile,
                        context     : buildCtx,
                        useBuildx   : params.USE_BUILDX,
                        useBuildKit : params.USE_BUILDKIT,
                        proxyEnv    : proxyEnv
                        // secretFiles: ['.npmrc'] // uncomment if you add a private registry token file
                    )
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                script {              
                    deployContainer(
                    image: "${repo}:${tag}",
                    containerName: 'node_sample_container',
                    ports: '3000:3000',
                    healthPath: '/health'
                    )

                }
            }
        }
    }

    post {
        always {
            echo "Build finished for ${repo}:${tag}"
        }
    }
}