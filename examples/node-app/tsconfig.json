{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "allowJs": true,        // ← allow .js inputs
    "checkJs": false,       // ← keep type-checking off for JS for now
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": [
    "server.js",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}